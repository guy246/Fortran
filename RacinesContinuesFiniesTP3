    real :: ro,teta, x, y
    integer :: i,j
    write(*,*)
    write(*,"('Rentrer les valeurs de u : ')",advance="no")
    read(*,*) n

    allocate(u(n))

    do i=1,n
        write(*,"('Rentrer la partie rÃ©elle de u',i1,' : ')",advance="no")
        read(*,*) x
        write(*,"('Rentrer la partie imaginaire de u',i1,' : ')",advance="no")
